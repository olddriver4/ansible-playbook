[client]

[mysql]
prompt = [\\u@\\p][\\d]>\\_
no-auto-rehash

[mysqldump]
single-transaction

[mysqld]
# basic settings #
user = mysql
sql_mode = "STRICT_TRANS_TABLES,NO_ENGINE_SUBSTITUTION,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER"
autocommit = 1
{% if server_id is defined %}
server-id = {{server_id}}
{% else %}
server-id = 100
{% endif %}
character_set_server=utf8mb4
datadir={{datadir}}
explicit_defaults_for_timestamp = 1
max_allowed_packet = 64M
event_scheduler = 1
socket = /tmp/mysql.sock

# connection #
interactive_timeout = 7200
wait_timeout = 7200
lock_wait_timeout = 3600
skip_name_resolve = 1
max_connections = 1024
max_user_connections = 256
max_connect_errors = 1000000

# table cache performance settings
table_open_cache = 4096
table_definition_cache = 4096
#table_open_cache_instances = 64

# session memory settings #
read_buffer_size = 2M
read_rnd_buffer_size = 2M
sort_buffer_size = 2M
tmp_table_size = 16M
join_buffer_size = 16M

# log settings #
slow_query_log = 1
log_error = {{log_dir}}/error.log
general_log_file = {{log_dir}}/general.log
slow_query_log_file = {{log_dir}}/slow.log
log_bin = {{binary_log_dir}}/binlog
log_error_verbosity = 2

log_queries_not_using_indexes = 1
log_slow_admin_statements = 1
log_slow_slave_statements = 1
log_throttle_queries_not_using_indexes = 10
expire_logs_days = 1
max_binlog_size = 200M
long_query_time = 2
min_examined_row_limit = 100
log-bin-trust-function-creators = 1
log-slave-updates = 1

# innodb settings #
innodb_buffer_pool_size = {{bp_size}}
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1
innodb_lru_scan_depth = 4096
innodb_lock_wait_timeout = 5
innodb_io_capacity = 1000
innodb_io_capacity_max = 20000
innodb_flush_method = O_DIRECT
innodb_flush_neighbors = 0
innodb_log_file_size = 1G
innodb_log_files_in_group = 2
innodb_log_buffer_size = 16M
innodb_purge_threads = 4
#innodb_thread_concurrency = 32
innodb_print_all_deadlocks = 1
innodb_sort_buffer_size = 16M
innodb_write_io_threads = 8
innodb_read_io_threads = 8
innodb_online_alter_log_max_size=1G
innodb_open_files=4096
#innodb_status_output=1
#innodb_status_output_locks=1

# replication settings #
master_info_repository = TABLE
relay_log_info_repository = TABLE
sync_binlog = 10
gtid_mode = on
enforce_gtid_consistency = 1
log_slave_updates
binlog_format = ROW
binlog_rows_query_log_events = 1
relay_log = relay.log
relay_log_recovery = 1
slave_skip_errors = ddl_exist_errors
slave-rows-search-algorithms = 'INDEX_SCAN,HASH_SCAN'

# semi sync replication settings #
plugin-load = "semisync_master.so;semisync_slave.so"
#plugin-load = "group_replication.so;validate_password.so;semisync_master.so;semisync_slave.so"
loose_rpl_semi_sync_master_enabled = 1
loose_rpl_semi_sync_master_timeout = 1000
loose_rpl_semi_sync_slave_enabled = 1

# password plugin #
#validate_password_policy = STRONG
#validate-password = FORCE_PLUS_PERMANENT

# perforamnce_schema settings
#performance-schema-instrument='memory/%=COUNTED'
#performance_schema_digests_size = 40000
#performance_schema_max_table_handles = 40000
#performance_schema_max_table_instances = 40000
#performance_schema_max_sql_text_length = 4096
#performance_schema_max_digest_length = 4096

[mysqld-5.6]
# metalock performance settings
metadata_locks_hash_instances = 64

[mysqld-5.7]
# new innodb settings #
loose_innodb_numa_interleave = 1
innodb_buffer_pool_dump_pct = 40
innodb_page_cleaners = 4

# new replication settings #
slave-parallel-type = LOGICAL_CLOCK
slave-parallel-workers = 2
slave_preserve_commit_order = 1
slave_transaction_retries = 128
# other change settings #
binlog_gtid_simple_recovery = 1
log_timestamps = system
show_compatibility_56 = on
